
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model OnlineInventory.Models.UserLoginModel

<div class="row">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h4>Manage Invoice</h4>

        </div>
        <div class="panel-body">
            <div class="col-md-12">
                <div class="col-md-4">
                    <div class="form-group">

                        <label class="col-sm-12 control-label no-padding-right" for="form-field-1">To Customer </label>
                        <select class="form-control" id="form-field-select-1">
                            <option value=""></option>
                            <option value="AL">Alabama</option>
                            <option value="AK">Alaska</option>
                        </select>

                    </div>
                </div>
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="col-sm-12 control-label no-padding-right" for="form-field-1">Invoice Date </label>
                        <input type="date" id="form-field-1-1" placeholder="Invoice Date" class="form-control">

                    </div>
                </div>

                <div class="=row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="col-sm-12 control-label no-padding-right" for="form-field-1">Choose Product </label>
                            <select class="form-control" id="form-field-select-1">
                                <option value=""></option>
                                <option value="AL">Alabama</option>
                                <option value="AK">Alaska</option>
                            </select>

                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Quanity </label>
                            <input type="text" id="form-field-1-1" placeholder="Quanity" class="form-control">

                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Rate </label>
                            <input type="text" id="form-field-1-1" placeholder="Rate" class="form-control">

                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Amount </label>
                            <input type="text" id="form-field-1-1" placeholder="Amount" class="form-control">

                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label style="color:white" class="col-sm-3 control-label no-padding-right" for="form-field-1">Amount </label>
                            <button class="btn btn-info btn-block">Add</button>

                        </div>
                    </div>

                </div>


                <hr />
                <div class="col-md-12">
                    <table id="simple-table" class="table  table-bordered table-hover">
                        <thead>
                            <tr>


                                <th>Item No</th>
                                <th>Item Details</th>
                                <th>Quantity</th>
                                <th>Rate</th>
                                <th>Amount</th>
                            </tr>
                        </thead>

                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>Product One</td>
                                <td>50</td>
                                <td>550</td>
                                <td>20000</td>
                            </tr>

                        </tbody>
                    </table>
                </div>
                <hr />
                <br />
                <div class="col-md-12 text-right">
                    <fieldset>
                        <label>Total Amount</label>
                        <input type="number" placeholder="0…">
                    </fieldset>
                </div>

                <br />
                <br />
                <br />
                <br />
                <hr />

            </div>

        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col-md-8"></div>
                <div class="col-md-2">
                    <button class="btn btn-danger btn-block">Submit</button>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-success btn-block">Print</button>
                </div>
            </div>
        </div>
    </div>
</div>
















































